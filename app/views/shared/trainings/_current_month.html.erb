<div class="table">
  <div class="table-core">
    <div class="table-head">
      <div class="d-flex">
        <div class="table-head-item"></div>
        <div class="table-head-item">Trainings</div>
        <div class="table-head-item">Time</div>
        <div class="table-head-item">Distance</div>
      </div>
    </div>
    <div class="table-body">
      <div class="d-flex">
        <div class="table-body-item">Swim</div>
        <div class="table-body-item"><%= @data_month[:swim][:sessions] %></div>
        <div class="table-body-item"><%= Convertor::ConvertSecondsInString.call(@data_month[:swim][:time]) %></div>
        <div class="table-body-item"><%= @data_month[:swim][:distance] %> kms</div>
      </div>
      <div class="d-flex">
        <div class="table-body-item">Bike</div>
        <div class="table-body-item"><%= @data_month[:bike][:sessions] %></div>
        <div class="table-body-item"><%= Convertor::ConvertSecondsInString.call(@data_month[:bike][:time]) %></div>
        <div class="table-body-item"><%= @data_month[:bike][:distance] %> kms</div>
      </div>
      <div class="d-flex">
        <div class="table-body-item">Run</div>
        <div class="table-body-item"><%= @data_month[:run][:sessions] %></div>
        <div class="table-body-item"><%= Convertor::ConvertSecondsInString.call(@data_month[:run][:time]) %></div>
        <div class="table-body-item"><%= @data_month[:run][:distance] %> kms</div>
      </div>
      <div class="d-flex">
        <div class="table-body-item">Gym</div>
        <div class="table-body-item"><%= @data_month[:gym][:sessions] %></div>
        <div class="table-body-item"><%= Convertor::ConvertSecondsInString.call(@data_month[:gym][:time]) %></div>
        <div class="table-body-item"><%= @data_month[:gym][:distance] %> kms</div>
      </div>
      <div class="d-flex">
        <div class="table-body-item">TOTAL</div>
        <div class="table-body-item"><%= @data_month[:totals][:sessions] %></div>
        <div class="table-body-item"><%= Convertor::ConvertSecondsInString.call(@data_month[:totals][:time]) %></div>
        <div class="table-body-item"><%= @data_month[:totals][:distance] %> kms</div>
      </div>
    </div>
  </div>
</div>
