<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div data-controller="trainings">
        <button class="activity-btn" data-action="click->trainings#displayForm" data-target="trainings.addBtn">Add an activity</button>

        <%= simple_form_for(@training, html: { data: { target: 'trainings.form' } } ) do |f| %>
          <%= f.input :sport, collection: Training::SPORTS, input_html: { class: 'add-activity-input' } %>
          <%= f.input :distance, placeholder: 'kms', input_html: { class: 'add-activity-input', min: 0 } %>
          <%= f.input :time, placeholder: 'hh:mm:ss', input_html: { class: 'add-activity-input' } %>
          <%= f.input :ascending_elevation, input_html: { class: 'add-activity-input' } %>
          <%= f.submit class: 'submit-btn w-100' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
